.testimonials
	background #FFF
	&-in
		@extend .in
		padding 4.375rem 0 3.125rem
		text-align center
	&-title
		margin-bottom 2.5rem
		font normal 1.875rem/1 $ff-mr
		color #555
	&-text
		margin-bottom 4rem
		font: normal 0.875rem/1.5rem $ff-or
		color: #88929d
	&-quote
		display inline-block
		font-size 0
.quote-pic
	margin-top 0.5rem
	display inline-block
	width 5.0625rem 
	height 5.0625rem
	vertical-align top
.quote-content
	position relative
	margin-left (38/989)*100%
	border 0.125rem solid #e0e0e0
	padding: (20/480)*100% (30/480)*100% (30/480)*100%
	width (480/989)*100%
	display inline-block
	text-align left
	-webkit-border-radius 0.3125rem
	 border-radius 0.3125rem
	@media all and (max-width 31.25rem)
		margin-top 0.625rem
		margin-left auto
		margin-right auto
		width 80%
		display block
	&:before
		content ""
		position absolute
		top 2.8125rem
		left -0.9375rem
		sprite($quote-arrow)
.quote-title
	margin-bottom 1.25rem
	font: normal 1.125rem/1 $ff-mr
	color: #111
	span
		font-size 0.75rem
.quote-text
	font-size 0.9375rem
	color: #959595
	line-height 1.875rem
    