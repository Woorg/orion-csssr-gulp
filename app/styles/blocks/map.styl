.map
	position: relative
	min-height: 28.625rem
	@media all and (max-width 37.5rem) 
		display none 
.map-object
	position: absolute
	top: 0
	left: 0
	width: 100%
	min-height: 28.625rem
	text-align center
.map-img
	min-width: 100%
	height: 100%
	display: block
.map-in
	position: relative
.map-tooltip
	position: absolute
	top: 0
	left: 0
	padding: 1.875rem 0 2.5rem
	width: 26.25rem
	min-height 9.25rem
	font-size 0.875rem
	background: #fff
	text-align left
	-webkit-border-radius: 5px
	border-radius: 0.3125rem
	box-shadow: -0.05625rem 0.03125rem 0.3125rem rgba(0, 0, 0, 0.2)
	&:after
		position: absolute
		top: 2.4375rem
		right: -1.625rem
		content: ""
		width: 0
		height: 0
		border-style: solid
		border-width: 0.9375rem 0 0.9375rem 1.625rem
		border-color: transparent transparent transparent #ffffff
	img
		top -1.25rem
		right 0
.map-tooltip-title
	margin-bottom: 0.875rem
	padding: 0 1.25rem
	font-family $ff-mr 
	font-size 1.125rem 
	color: #555555
.map-tooltip-text
	margin-bottom: 1.875rem
	padding: 0 1.25rem
	font-family $ff-or
	font-size: 0.75rem
	color: #acacac
.map
	.map-tooltip-control
		position absolute
		bottom 0
		left 0
		right 0
		width 100%
		text-align center
		.button
			width 100%
			line-height 2.625rem
			text-transform uppercase
			-webkit-border-radius 0 0 0.3125rem 0.3125rem
			border-radius 0 0 0.3125rem 0.3125rem
			font-family $ff-mb 
			cursor pointer
